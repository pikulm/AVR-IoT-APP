
<LoginScreen>:
    FloatLayout:
        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#E5E5E5")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 1
            rows: 1
            pos_hint: {"top": 1, "left":1}
            size_hint: 1, 0.4
            ImageButton:
                source: "icons/login_bulb_off@3x.png"
                on_press:
                    self.source= "icons/login_bulb_on@3x.png"
                on_release:
                    self.source= "icons/login_bulb_off@3x.png"

        FloatLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#E5E5E5")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 1
            rows: 1
            pos_hint: {"top": 0.6, "left":1}
            size_hint: 1, 0.3
            TextInput:
                text: ""
                background_color: utils.get_color_from_hex("#E5E5E5")
                pos_hint: {"top":0.8, "left":1}
                size_hint: 1, 0.4
                id: id_to_verify
                password: True
                hint_text: "verify your ID"

        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#E5E5E5")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 1
            pos_hint: {"top": 0.3, "left":1}
            size_hint: 1, 0.3
        ImageButton:
            pos_hint: {"top": 0.3, "left":1}
            size_hint: 1, 0.1
            source: "icons/login@3x.png"
            on_release:
                app.set_id_to_verify(id_to_verify.text)
                app.hash_id()
                app.verify_id()
                app.change_screen()

