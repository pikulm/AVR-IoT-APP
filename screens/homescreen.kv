#: import utils kivy.utils

<HomeScreen>:
    FloatLayout:

        Button:
            pos_hint: {"top": 1, "left":1}
            size_hint: 1, 0.1
            text:
                "LOGOUT"
            on_release:
                app.change_screen("login_screen")

        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#E5E5E5")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 2
            pos_hint: {"top": 0.9, "left":1}
            size_hint: 1, 0.3
            ToggleButton:
                size_hint: None, None
                size: 0.5 * root.width, 0.3 * root.height
                pos: 0 * root.width, 0.6 * root.height
                group: 'mode'
                text: "AUTO MODE"

            ToggleButton:
                size_hint: None, None
                size: 0.5 * root.width, 0.3 * root.height
                pos: 0.5 * root.width, 0.6 * root.height
                group: 'mode'
                text: "MANUAL MODE"

        RelativeLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#D1D1D1")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 4
            pos_hint: {"top": 0.6, "left":1}
            size_hint: 1, 0.6

            ToggleButton:
                border: 0,0,0,0
                background_normal: 'icons/blue_off.png'
                background_down: 'icons/blue_on.png'
                size_hint: None, None
                size: 0.25 * root.width, 0.5 * root.height
                pos: 0 * root.width, 0.1 * root.height
                group: 'color'

            ToggleButton:
                border: 0,0,0,0
                background_normal: 'icons/green_off.png'
                background_down: 'icons/green_on.png'
                size_hint: None, None
                size: 0.25 * root.width, 0.5 * root.height
                pos: 0.25 * root.width, 0.1 * root.height
                group: 'color'

            ToggleButton:
                border: 0,0,0,0
                background_normal: 'icons/cyan_off.png'
                background_down: 'icons/cyan_on.png'
                size_hint: None, None
                size: 0.25 * root.width, 0.5 * root.height
                pos: 0.5 * root.width, 0.1 * root.height
                group: 'color'

            ToggleButton:
                border: 0,0,0,0
                background_normal: 'icons/no_off.png'
                background_down: 'icons/no_on.png'
                size_hint: None, None
                size: 0.25 * root.width, 0.5 * root.height
                pos: 0.75 * root.width, 0.1 * root.height
                group: 'color'

        Button:
            pos_hint: {"top": 0.1, "left":1}
            size_hint: 1, 0.1
            text:
                "SEND"
            on_release:
                print("sending")