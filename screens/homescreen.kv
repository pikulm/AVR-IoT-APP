#: import utils kivy.utils

<HomeScreen>:
    FloatLayout:
        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#E5E5E5")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 1
            rows: 1
            pos_hint: {"top": 1, "left":1}
            size_hint: 1, 0.1
            ImageButton:
                source: "icons/logout@3x.png"
                on_release:
                    app.change_screen("login_screen")

        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#E5E5E5")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 2
            pos_hint: {"top": 0.9, "left":1}
            size_hint: 1, 0.3
            ToggleButton:
                border: 0,0,0,0
                background_normal: 'icons/auto_off@3x.png'
                background_down: 'icons/auto_on@3x.png'
                size_hint: None, None
                size: 0.5 * root.width, 0.3 * root.height
                pos: 0 * root.width, 0.6 * root.height
                group: 'mode'
                on_release:
                    autoMode = 1
                    print(autoMode)

            ToggleButton:
                border: 0,0,0,0
                background_normal: 'icons/manual_off@3x.png'
                background_down: 'icons/manual_on@3x.png'
                size_hint: None, None
                size: 0.5 * root.width, 0.3 * root.height
                pos: 0.5 * root.width, 0.6 * root.height
                group: 'mode'
                on_release:
                    autoMode = 0
                    print(autoMode)

        RelativeLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#E5E5E5")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 4
            pos_hint: {"top": 0.6, "left":1}
            size_hint: 1, 0.6

            ToggleButton:
                border: 0,0,0,0
                background_normal: 'icons/blue_off_text@3x.png'
                background_down: 'icons/blue_on_text@3x.png'
                size_hint: None, None
                size: 0.25 * root.width, 0.5 * root.height
                pos: 0 * root.width, 0.1 * root.height
                group: 'color'
                on_release:
                    color = "b"
                    print(color)

            ToggleButton:
                border: 0,0,0,0
                background_normal: 'icons/cyan_off_text@3x.png'
                background_down: 'icons/cyan_on_text@3x.png'
                size_hint: None, None
                size: 0.25 * root.width, 0.5 * root.height
                pos: 0.25 * root.width, 0.1 * root.height
                group: 'color'
                on_release:
                    color = "c"
                    print(color)

            ToggleButton:
                border: 0,0,0,0
                background_normal: 'icons/green_off_text@3x.png'
                background_down: 'icons/green_on_text@3x.png'
                size_hint: None, None
                size: 0.25 * root.width, 0.5 * root.height
                pos: 0.5 * root.width, 0.1 * root.height
                group: 'color'
                on_release:
                    color = "g"
                    print(color)

            ToggleButton:
                border: 0,0,0,0
                background_normal: 'icons/offlight_off_text@3x.png'
                background_down: 'icons/offlight_on_text@3x.png'
                size_hint: None, None
                size: 0.25 * root.width, 0.5 * root.height
                pos: 0.75 * root.width, 0.1 * root.height
                group: 'color'
                on_release:
                    color = "n"
                    print(color)

        ImageButton:
            pos_hint: {"top": 0.1, "left":1}
            size_hint: 1, 0.1
            source: "icons/send@3x.png"
            on_release:
                print("sending")